mixin breadcrumb(options = {})
  - var allModifiers = options.modifiers ? options.modifiers.map(function(val) {
    return 'breadcrumb--' + val;
  }) : null;

  - var items = options.items || [];

  nav.breadcrumb(aria-label='breadcrumb', class=allModifiers)&attributes(attributes)
    ul.breadcrumb__list
      each item in items
        li.breadcrumb__item(class=item.href ? '' : 'breadcrumb__item--is-active')
          a.breadcrumb__link(href=item.href ? item.href : false)= item.title
