mixin breadcrumb(options)

  -
    if (typeof(options) === 'undefined') {
      var options = {};
    }

    if (typeof(options.modifiers) !== 'undefined' && options.modifiers) {
      var allModifiers = options.modifiers.map(function(val) {
        return 'breadcrumb--' + val;
      });
    }

  nav.breadcrumb(aria-label='breadcrumb', class=allModifiers)&attributes(attributes)
    ul.breadcrumb__list

      each item in options.items

        if item.href
          li.breadcrumb__item
            a.breadcrumb__link(href=item.href)= item.title

        else
          li.breadcrumb__item.breadcrumb__item--is-active
            a.breadcrumb__link= item.title